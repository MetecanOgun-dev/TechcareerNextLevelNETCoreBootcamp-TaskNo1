@model List<Employee>

<h3>Employees</h3>
<br />

<a class="btn  btn-primary float-md-end" asp-controller="Employee" asp-action="AddEmployee">Add Employee</a>
@if (Model.Count > 0 && Model is not null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Title</th>
                <th>Orders</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Title</td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-controller="Order" asp-action="EmployeeOrders" asp-route-id="@employee.EmployeeId">Orders</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No records to display.</p>
}